@model LMSweb.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

@using (Html.BeginForm("Login", "Student", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container" style=" padding: 50px 30px 40px; ">
    
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <div class="card" style="width: 23rem; box-shadow: 0 2px 2px; border-radius: 15px;">
                    <h4 class="card-header" style=" padding: 20px 30px 20px; ">學生登入</h4>
                    <div class="card-body" style=" padding: 30px 30px 40px; ">
                        <div class="mb-3">
                            學號
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="mb-3">
                            密碼
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <br />
                        <div class="row g-1 ">
                            <div class="col-auto">
                                <input type="submit" value="登入" class="btn btn-primary" />
                            </div>
                            <div class="col-auto">
                                <input type="button" class="btn btn-secondary" value="取消" onclick="location.href='@Url.Action("Index", "Home")'" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

